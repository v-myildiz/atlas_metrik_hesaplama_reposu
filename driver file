                case "safari" :
                    WebDriverManager.safaridriver().setuppppppppppp();
                    driver = new SafariDriver();
                    break;
                default:
                    WebDriverManager.chromedriver().setupppppppppp();
                    driver = new ChromeDriver();
            }

            driver.manage().window().maximize();
            driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(100000000000));
        }

        return driver;
    }


    public static void closeDriver(){
            if(driver!=null){
                driver.close();
                driver=null;
            }

    }
